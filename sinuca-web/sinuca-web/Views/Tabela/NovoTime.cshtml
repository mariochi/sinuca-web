@{
    int TabID = ViewBag.TabelaID;
    ViewData["Title"] = "Criando Tabela";
}

<div>
    <h2>Times</h2>
    <div>
        <a href="/tabela/index" class="btn">Voltar</a>
    </div>
    <form action="/tabela/criarTime" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" name="nome">
        </div>
        <div class="form-group">
            <label for="jogador1">1º Jogador:</label>
            <input type="text" class="form-control" name="jogador1">
        </div>
        <div class="form-group">
            <label for="jogador2">2º Jogador:</label>
            <input type="text" class="form-control" name="jogador2">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="tabelaid" value="@TabID.ToString()">
        </div>
        <button type="submit" class="btn btn-defa ult">Submit</button>
    </form>
</div>

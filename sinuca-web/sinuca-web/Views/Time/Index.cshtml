@{
    List<Time> times = ViewBag.Times;
    ViewData["Title"] = "Times";
    Tabela tablename = new Tabela();
}

<div>
    <h2>Times</h2>
    <div>
        <a href="/time/novo" class="btn">Novo Time</a>
    </div>
    <table class="table">
        
        @foreach (var t in times)
        {
        <tr>
            <td>@t.Nome</td>
            <td>@t.Jogador1</td>
            <td>@t.Jogador2</td>
            @if (t.TabelaID != -1)
            {
                
                <td>@tablename.PorID(t.TabelaID).Nome</td>
            }
            else
            {
                <td>
                    Sem time.
                </td>
            };

        </tr>
        }

    </table>
</div>
